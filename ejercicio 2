programa ejercicio2
procesos
  proceso juntarFlores (ES flores:numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:= flores+1
  fin
  proceso depositarFlores (ES flores: numero)
  comenzar
    repetir flores {no puedo asumir que no hay flores en la bolsa} {aunque no las haya?}
      depositarFlor
  fin
  proceso juntarDiez (ES flores: numero)
  comenzar
    repetir 10
      juntarFlores (flores)
      mover
  fin
  proceso juntarNueve (ES flores: numero)
  comenzar
    repetir 9
      juntarFlores (flores)
      mover
  fin
  proceso irCincuenta (E flores: numero)
  variables
    av, ca: numero
  comenzar
    av:= PosAv
    ca:= PosCa
    BloquearEsquina (50,50)
    Pos (50,50)
    depositarFlores(flores)
    Pos(av,ca)
    LiberarEsquina (50,50)
  fin
  proceso siSoy (E id: numero)
  comenzar
    si (id = 1)
      EnviarMensaje (id, r2)
      EnviarMensaje (id, r3)
    sino
      si (id = 2)
        EnviarMensaje (id, r1)
        EnviarMensaje (id, r3)
      sino 
        si (id = 3)
          EnviarMensaje (id, r1)
          EnviarMensaje (id,r2)
  fin
  proceso esperarQuien 
  variables
    id: numero {la pongo porq la del robot si la mando para aca no tiene sentido}
  comenzar
    repetir 2
      RecibirMensaje (id,*) {otra vez, tiene sentido esperar de uno o de otro?}
  fin
  proceso enviarIds 
  comenzar
    EnviarMensaje (1, r1)
    EnviarMensaje (2,r2)
    EnviarMensaje (3,r3)
  fin
  proceso recibirIds
  variables
    id: numero
  comenzar
    repetir 3
      RecibirMensaje (id,*) {bastaria con solo recibir 3 sin importar de quien? ya que no tiene relevancia solo necesita los 3 mensajes}
  fin
areas
  area1: AreaP (1,1,100,1)
  area2: AreaP (1,2,100,2)
  area3: AreaP (1,3,100,3)
  areaF: AreaP (1,4,1,4)
  areaC: AreaC (50,50,50,50)
robots
  robot fiscal
  variables
    flores: numero
  comenzar
    enviarIds
    recibirIds
    Pos (50,50)
    juntarFlores (flores)
    Informar (flores)
  fin
  robot recolector
  variables
    flores, id: numero
  comenzar 
    derecha
    RecibirMensaje (id, fiscal)
    repetir 9
      flores:=0
      juntarDiez (flores)
      irCincuenta (flores)
      siSoy (id)
      esperarQuien 
    flores:=0
    juntarNueve (flores)
    irCincuenta (flores)
    siSoy (id)
    esperarQuien
    EnviarMensaje (id, fiscal)
    {pongo flores en 0 cada diez esquinas porque sino estaria intentando pponer las flores acumuladas de todas las esquinas y como uso un repetir no se puede, esto cambiaria si uso un MIENTRAS HAYFLOR pero no se puede asumir que no hay flor en la bolsa}
  fin
variables
  fiscal: fiscal
  r1: recolector
  r2: recolector
  r3: recolector
comenzar
  AsignarArea (fiscal, areaF)
  AsignarArea (fiscal, areaC)
  AsignarArea (r1, area1)
  AsignarArea (r1, areaC)
  AsignarArea (r2, area2)
  AsignarArea (r2, areaC)
  AsignarArea (r3, area3)
  AsignarArea (r3, areaC)
  Iniciar (fiscal, 1,4)
  Iniciar (r1, 1,1)
  Iniciar (r2, 1,2)
  Iniciar (r3, 1,3)
fin
