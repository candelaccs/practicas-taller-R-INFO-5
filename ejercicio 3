{ no me junta todos los papeles}

programa ejercicio3
procesos 
  proceso juntarFlor (ES flores: numero)
  comenzar
    si HayFlorEnLaEsquina
      tomarFlor
      flores:= flores+1
  fin
  proceso juntarFlores (ES flores: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:= flores+1
  fin
  proceso depositarFlores (E flores: numero)
  comenzar
    repetir flores
      depositarFlor
  fin
  proceso dejarEnEsquina (E flores: numero)
  variables
    av, ca: numero
  comenzar
    av:= PosAv
    ca:= PosCa
    BloquearEsquina (10,10)
    Pos(10,10)
    depositarFlores (flores)
    Pos(av,ca)
    LiberarEsquina (10,10)
  fin
  proceso tomarDeEsquina (ES flores: numero; E av: numero; E ca: numero)
  comenzar
    BloquearEsquina (10,10)
    Pos (10,10)
    juntarFlores (flores)
    Pos (av,ca)
    LiberarEsquina (10,10)
  fin
areas
  area1: AreaP (1,3,100,3)
  area2: AreaP (1,4,100,4)
  area3: AreaP (1,5,1,5)
  areaC: AreaC (10,10,10,10)
robots
  robot recolector    
  variables
    flores, pasos: numero
  comenzar
    flores:=0
    pasos:=0  
    derecha
    mientras (PosAv < 100) {para que siga}
      mientras ((PosAv < 100) & (flores < 10) & (pasos < 5)) {para que no se caiga}
        juntarFlor (flores)
        mover
        pasos:= pasos+1
      si (PosAv <> 100)
        dejarEnEsquina (flores)
        EnviarMensaje (1, cosechador)
        flores:=0
        pasos:=0
    EnviarMensaje (0, cosechador)
  fin
  robot cosechador
  variables
    flores, cont, num, av,ca: numero
  comenzar
    cont:=0
    flores:=0
    av:= PosAv
    ca:= PosCa
    mientras (cont < 2)
      RecibirMensaje (num, *)
      si (num <> 0)
        tomarDeEsquina (flores, av,ca)
      sino
        cont:= cont+1
    Informar (flores)
  fin
variables
  r1: recolector
  r2: recolector
  cosechador: cosechador
comenzar
  AsignarArea (r1, area1)
  AsignarArea (r1, areaC)
  AsignarArea (r2, area2)
  AsignarArea (r2, areaC)
  AsignarArea (cosechador, area3)
  AsignarArea (cosechador, areaC)
  Iniciar (r1, 1,3)
  Iniciar (r2, 1,4)
  Iniciar (cosechador,1,5)
fin
